
<SettingsScreen>:
    BoxLayout:
        orientation: "vertical"
        Toolbar:
            id: toolbar
            title: root.title
            #left_action_items: [["menu", lambda x: app.nav_drawer.toggle(), False]]
            left_action_items: [["chevron-left", lambda x: app.root.goto_front(), False]]
            right_action_items: [["menu", lambda x: app.root.ids.nav_layout.toggle_nav_drawer()]]
            md_bg_color: app.theme_cls.primary_color
            background_palette: "Red"
            background_hue: "500"
        RecycleView:
            MDList:
                id: settingslist
                OneLineListItem:
                    text: "Filters"
                    on_release: app.root.show_filters()
