<ThumbButton>:
    size_hint_y: None
    font_name: "fonts/NotoSansCJK-Regular.ttc"
    _num_lines: 3
    font_style: "Body1"
    secondary_size_hint_y: 5
    size_hint_x: 1

<TagButton>:
    #size_hint_x: 1
    #size_hint_y: None
    # background_color: (.7, .7, .7, 0.5)
    size_hint_x: 1
    width: root.width
    text: root.tagname
    text_size: self.width, None
    theme_text_color: "Secondary"
    height: dp(55)
    shorten: True
    shorten_from: "left"
    split_str: ""

<GalleryNavButton>:
    background_color: 0, 0, 0, .2
    background_normal: "img/transparent.png"
    background_down: "img/button_bg_down.png"
    size_hint_x: .5
    width: dp(70)


<AvatarSampleWidget>:
    allow_stretch: True
