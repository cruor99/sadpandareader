
<GalleryScreen>:
    BoxLayout:
        orientation: "vertical"
        Toolbar:
            id: toolbar
            background_color: app.theme_cls.primary_color
            font_name: "fonts/NotoSansCJK-Regular.ttc"
            title: str("{}/{} - {}".format(root.current_page, root.pagecount, root.title))
            #left_action_items: [["menu", lambda x: app.nav_drawer.toggle(), False]]
            left_action_items: [["chevron-left", lambda x: app.root.onBackBtn(), False]]
            md_bg_color: app.theme_cls.primary_color
            background_palette: "Red"
            background_hue: "500"
        GalleryContainerLayout:
            id: container_layout
            RecycleView:
                id: gal_rv
                viewclass: 'GalleryImage'
                data: root.gallery_images
                RecycleBoxLayout:
                    id: gal_layout
                    orientation: "vertical"
                    default_size: None, container_layout.height
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height

