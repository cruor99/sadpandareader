
<GalleryScreen>:
    BoxLayout:
        orientation: "vertical"
        Toolbar:
            id: toolbar
            background_color: app.theme_cls.primary_color
            font_name: "fonts/NotoSansCJK-Regular.ttc"
            title: "{}/{} - {}".format(root.current_page, root.pagecount, root.title.encode("utf-8"))
            #left_action_items: [["menu", lambda x: app.nav_drawer.toggle(), False]]
            left_action_items: [["chevron-left", lambda x: app.root.onBackBtn(), False]]
            md_bg_color: app.theme_cls.primary_color
            background_palette: "Red"
            background_hue: "500"
        GalleryContainerLayout:
            id: container_layout
            GalleryCarousel:
                id: gal_carousel
                on__offset: root.testmove(self._offset, self.min_move, self.direction)
                scroll_timeout: 100
                GalleryImage:
                    id: gal_image
            GalleryNavButton:
                pos_hint: {"center_x": .99}
                size_hint_y: 1
                disabled: gal_image.hide_buttons
                on_release: root.next_image(self)
            GalleryNavButton:
                size_hint_y: 1
                pos_hint: {"center_x": .01}
                disabled: gal_image.hide_buttons
                on_release: root.previous_image(self)

