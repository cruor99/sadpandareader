#:import NavigationDrawerToolbar kivymd.navigationdrawer.NavigationDrawerToolbar

<SadpandaNavdrawer>:
    NavigationDrawerToolbar:
        title: "Sadpanda Navigation"
        right_action_items: [["close", lambda x: app.root.ids.nav_layout.toggle_nav_drawer()]]
    NavigationDrawerIconButton:
        icon: "home"
        text: "Frontpage"
        on_release: app.root.goto_front()
    NavigationDrawerIconButton:
        icon: "magnify"
        text: "Search"
        on_release: app.root.search_popup()
    NavigationDrawerIconButton:
        icon: "star"
        text: "Favourites"
        on_release: app.root.next_screen("favourite_screen")
    NavigationDrawerIconButton:
        icon: "settings"
        text: "Settings"
        on_release: app.root.next_screen("settings_screen")
    NavigationDrawerIconButton:
        icon: "close-circle"
        text: "Logout"
        on_release: app.root.log_out()
