
<GalleryImage>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgb: 1, 0, 0
    #size_hint: None, None

    #allow_stretch: True
    #keep_ratio: True
    do_translation: False


<GalleryCarousel>:
    id: "galcarousel"
    loop: True
    #on__offset: self.startmove()

<GalleryContainerLayout>:
    id: "galcontainer"
