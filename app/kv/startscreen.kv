
<StartScreen>:
    RelativeLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "img/main_bg.png"
        BoxLayout:
            center: self.parent.center
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: None, None
            width: dp(150)
            orientation: "vertical"
            MDTextField:
                size_hint: None, None
                height: dp(48)
                width: dp(150)
                id: username
                color_mode: "custom"
                foreground_color: 0, 0, 0, 1
                hint_text: "Username"
                write_tab: False
                _current_hint_text_color: [0.0, 0.0, 0.0, 1]
                line_color_normal: [0, 0, 0, 1]
            MDTextField:
                id: password
                password: True
                size_hint: None, None
                height: dp(48)
                width: dp(150)
                write_tab: False
                color_mode: "custom"
                foreground_color: 0, 0, 0, 1
                hint_text: "Password"
                line_color_normal: [0, 0, 0, 1]
                _current_hint_text_color: [0.0, 0.0, 0.0, 1]
                on_text_validate: app.root.login_exhentai(username, password)
            MDRaisedButton:
                size_hint_y: None
                size_hint_x: 1
                id: login
                height: dp(60)
                width: dp(300)
                text: "login"
                theme_text_color: "Secondary"
                on_release: app.root.login_exhentai(username, password)
            MDFlatButton:
                size_hint_y: None
                size_hint_x: None
                id: unrestricted
                height: dp(60)
                width: dp(150)
                opposite_colors: True
                text: "View Unrestricted"
                on_release: app.root.goto_front()
